@{
    Layout = "Layout Dash"; // O el nombre del archivo de tu layout
   

}


<main class="container py-4">
<div class="container-custom">
    <h2 class="mb-4">Registro de Repuestos</h2>

    <!-- Formulario de Registro de Repuestos -->
    <form id="repuestoForm" class="mb-4">
        <div class="row">
            <div class="col-md-4 mb-3">
                <label for="nombre" class="form-label">Nombre del Repuesto</label>
                <input type="text" class="form-control" id="nombre" required>
            </div>
            <div class="col-md-4 mb-3">
                <label for="modelo" class="form-label">Modelo</label>
                <input type="text" class="form-control" id="modelo" required>
            </div>
            <div class="col-md-4 mb-3">
                <label for="zona" class="form-label">Zona de Uso</label>
                <input type="text" class="form-control" id="zona" required>
            </div>
            <div class="col-md-4 mb-3">
                <label for="cantidad" class="form-label">Cantidad</label>
                <input type="number" class="form-control" id="cantidad" required>
            </div>
            <div class="col-md-4 mb-3">
                <label for="precio" class="form-label">Precio</label>
                <input type="text" class="form-control" id="precio" required>
            </div>
            <div class="col-md-4 mb-3">
                <button type="button" class="btn btn-custom btn-custom-add" onclick="addRepuesto()">Agregar Repuesto</button>
            </div>
        </div>
    </form>

    <!-- Tabla de Repuestos -->
    <div class="table-responsive">
        <table class="table table-striped table-bordered table-custom">
            <thead>
                <tr>
                    <th>Nombre del Repuesto</th>
                    <th>Modelo</th>
                    <th>Zona de Uso</th>
                    <th>Cantidad</th>
                    <th>Precio</th>
                </tr>
            </thead>
                <tbody id="repuestosTableBody">
                    <tr>
                        <td>Freno de Disco</td>
                        <td>FD123</td>
                        <td>Delantero</td>
                        <td>10</td>
                        <td>$150.00</td>
                    </tr>
                    <tr>
                        <td>Amortiguador</td>
                        <td>AM456</td>
                        <td>Trasero</td>
                        <td>5</td>
                        <td>$75.00</td>
                    </tr>
                    <tr>
                        <td>Filtro de Aceite</td>
                        <td>FA789</td>
                        <td>Motor</td>
                        <td>20</td>
                        <td>$20.00</td>
                    </tr>
                    <!-- Más filas de repuestos pueden ser agregadas aquí -->
                </tbody>
        </table>
    </div>
</div>
</main>

