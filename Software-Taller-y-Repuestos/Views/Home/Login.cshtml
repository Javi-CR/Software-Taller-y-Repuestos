@{
    ViewData["Title"] = "Entrar al sitio";
    
}


<section id="login" class="contact section-bg d-flex align-items-center" style="min-height: 100vh;">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center">
            <h2>Bienvenido</h2>
            <p>Iniciar Sesión</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 mt-5 mt-lg-0">

                <form asp-action="Login" method="post" role="form" class="php-email-form">
                    <div class="form-group">
                        <input type="email" name="Email" class="form-control" id="email" placeholder="Correo Electrónico" required>
                    </div>
                    <div class="form-group mt-3">
                        <input type="password" class="form-control" name="Password" id="password" placeholder="Contraseña" required>
                    </div>

                    <div class="text-center">
                        <button type="submit">Iniciar Sesión</button>
                    </div>
                </form>

                <!-- Separador con línea y "O" en el centro -->
                <div class="separator">
                    <span>O</span>
                </div>

                <!-- Botón de "Continuar con Google" -->
                <div class="text-center mt-3">
                    <button type="button" class="btn-google">
                        <i class="bi bi-google"></i> Continuar con Google
                    </button>
                </div>

                <!-- Enlaces de "Olvidé mi contraseña" y "No tengo cuenta" -->
                <div class="text-center mt-4">
                    <a href="@Url.Action("ForgotPassword", "Account")">¿Olvidaste tu contraseña?</a><br>
                    <a href="@Url.Action("Register", "Home")">¿No tienes cuenta? Regístrate</a>
                </div>

            </div>
        </div>

    </div>
</section>
