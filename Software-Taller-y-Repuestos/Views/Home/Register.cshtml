@model Usuario

@{
    ViewData["Title"] = "Crea una Cuenta";
}

<section id="register" class="contact section-bg d-flex align-items-center" style="min-height: 100vh;">
    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>Registrarse</h2>
            <p>Crea tu cuenta</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 mt-5 mt-lg-0">

                <div class="php-email-form">
                    <!-- Formulario -->
                    <form method="post" asp-controller="Home" asp-action="SubmitForm" enctype="multipart/form-data">
                        <div class="form-group">
                            <label for="Nombre">Nombre</label>
                            <input type="text" id="Nombre" asp-for="Nombre" class="form-control" required />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Correo">Correo</label>
                            <input type="email" id="Correo" asp-for="Correo" class="form-control" required />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>
                        <div class="form-group">
                            <label for="Contrasenna">Contraseña</label>
                            <input type="password" id="Contrasenna" asp-for="Contrasenna" class="form-control" required />
                            <span asp-validation-for="Contrasenna" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <input type="hidden" name="RolId" asp-for="RolId" value="2" />
                        </div>

                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block">Registrarse</button>
                        </div>
                    </form>

                </div>

                <!-- Separador con línea y "O" en el centro -->
                <div class="separator">
                    <span>O</span>
                </div>

                <!-- Botón de "Continuar con Google" -->
                <div class="text-center mt-3">
                    <button type="button" class="btn-google">
                        <i class="bi bi-google"></i> Continuar con Google
                    </button>
                </div>
            </div>
        </div>
    </div>
</section>


@if (ViewBag.ErrorMessage != null)
{
    <div>
        <span>@ViewBag.ErrorMessage</span>
    </div>
}

