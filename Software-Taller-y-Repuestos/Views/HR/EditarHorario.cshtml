@model Horario

@{
    ViewData["Title"] = "Editar Horario";
}

<section id="login" class="contact section-bg d-flex align-items-center" style="min-height: 100vh;">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center">
            <h2>Editar</h2>
            <p>Horario del Empleado</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 mt-5 mt-lg-0">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-secondary text-center">@ViewBag.ErrorMessage</div>
                }

                <form method="post" asp-controller="HR" asp-action="EditarHorario" class="php-email-form">
                    <input type="hidden" name="HorarioId" value="@Model.HorarioId" />
                    <input type="hidden" name="UsuarioId" value="@Model.UsuarioId" />

                    <div class="form-group">
                        <label asp-for="Fecha"></label>
                        <input asp-for="Fecha" type="date" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="HorasTrabajadas"></label>
                        <input asp-for="HorasTrabajadas" type="number" step="0.01" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="HorasExtras"></label>
                        <input asp-for="HorasExtras" type="number" step="0.01" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Ausencias"></label>
                        <input asp-for="Ausencias" type="number" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Permisos"></label>
                        <input asp-for="Permisos" type="number" class="form-control" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </div>
                </form>

            </div>
        </div>
    </div>
</section>
