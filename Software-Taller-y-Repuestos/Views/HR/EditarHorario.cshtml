@model Horario
@{
    ViewData["Title"] = "Editar Horario";
}
<div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="@Url.Action("Empleados", "HR")" style="color: white;">Regresar</a></li>
            </ol>
        </div>
    </nav>
</div>
<section id="login" class="contact section-bg d-flex align-items-center">
    <div class="container" data-aos="fade-up">
        <br>
        <div class="section-title text-center">
            <h2>Editar</h2>
            <p>Horario del Empleado</p>
        </div>
        <div class="row justify-content-center">
            <div class="col-lg-6 mt-5 mt-lg-0">
                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-secondary text-center">@ViewBag.ErrorMessage</div>
                }
                <form method="post" asp-controller="HR" asp-action="EditarHorario" class="php-email-form">
                    <input type="hidden" name="HorarioId" value="@Model.HorarioId" />
                    <input type="hidden" name="UsuarioId" value="@Model.UsuarioId" />
                    <div class="form-group">
                        <label asp-for="Fecha"></label>
                        <input asp-for="Fecha" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" min="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>
                    <div class="form-group">
                        <label asp-for="HorasTrabajadas"></label>
                        <select asp-for="HorasTrabajadas" class="form-control">
                            <option value="">Seleccione una opción</option>
                            @for (int i = 1; i <= 12; i++)
                            {
                                <option value="@i">@i horas</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="HorasExtras"></label>
                        <select asp-for="HorasExtras" class="form-control">
                            <option value="">Seleccione una opción</option>
                            @for (int i = 1; i <= 8; i++)
                            {
                                <option value="@i">@i horas</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Ausencias"></label>
                        <select asp-for="Ausencias" class="form-control">
                            <option value="">Seleccione una opción</option>
                            @for (int i = 0; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="form-group">
                        <label asp-for="Permisos"></label>
                        <select asp-for="Permisos" class="form-control">
                            <option value="">Seleccione una opción</option>
                            @for (int i = 0; i <= 10; i++)
                            {
                                <option value="@i">@i</option>
                            }
                        </select>
                    </div>
                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </div>
                </form>
            </div>
        </div>
        <br>
        <br>
        <br>
    </div>
</section>