@model Horario

@{
    ViewData["Title"] = "Editar Horario";
}

<div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="@Url.Action("Empleados", "HR")" style="color: white;">Regresar</a></li>
            </ol>
        </div>
    </nav>
</div>

<section id="login" class="contact section-bg d-flex align-items-center">
    <div class="container" data-aos="fade-up">


        <br>


        <div class="section-title text-center">
            <h2>Editar</h2>
            <p>Horario del Empleado</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 mt-5 mt-lg-0">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-secondary text-center">@ViewBag.ErrorMessage</div>
                }

                <form method="post" asp-controller="HR" asp-action="EditarHorario" class="php-email-form">
                    <input type="hidden" name="HorarioId" value="@Model.HorarioId" />
                    <input type="hidden" name="UsuarioId" value="@Model.UsuarioId" />

                    <div class="form-group">
                        <label asp-for="Fecha"></label>
                        <input asp-for="Fecha" type="date" class="form-control" value="@DateTime.Now.ToString("yyyy-MM-dd")" />
                    </div>

                    <div class="form-group">
                        <label asp-for="HorasTrabajadas"></label>
                        <input asp-for="HorasTrabajadas" type="number" step="0.01" class="form-control" style="appearance: none; -moz-appearance: textfield;" />
                    </div>

                    <div class="form-group">
                        <label asp-for="HorasExtras"></label>
                        <input asp-for="HorasExtras" type="number" step="0.01" class="form-control" style="appearance: none; -moz-appearance: textfield;" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Ausencias"></label>
                        <input asp-for="Ausencias" type="number" class="form-control" style="appearance: none; -moz-appearance: textfield;" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Permisos"></label>
                        <input asp-for="Permisos" type="number" class="form-control" style="appearance: none; -moz-appearance: textfield;" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Guardar</button>
                    </div>
                </form>

            </div>
        </div>

        <br>
        <br>
        <br>

    </div>
</section>
