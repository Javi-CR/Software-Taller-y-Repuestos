@model CuentaUsuario
@{
    ViewData["Title"] = "Empleados";
}

<!-- Segundo Navbar -->
<div>
    <nav class="breadcrumbs">
        <div class="container">
            <ol>
                <li><a href="@Url.Action("Empleados","HR")" style="color: white;">Empleados Disponibles</a></li>
                <li><a href="@Url.Action("AgregarEmpleados","HR")" style="color: white;">Agregar empleados por usuario Cliente</a></li>
                <li><a href="@Url.Action("AsignarEmpleados", "HR")">Agregar empleados</a></li>
            </ol>
        </div>
    </nav>
</div>

<!-- Sección de empleados -->
<section id="empleados" class="contact section-bg d-flex align-items-center">

    @if (ViewBag.ErrorMessage != null)
    {
        <div class="alert alert-secondary text-center">@ViewBag.ErrorMessage</div>
    }

    <div class="container" data-aos="fade-up">
        <div class="section-title text-center">
            <h2>Registrar Empleado</h2>
            <p>Crea un empleado</p>
        </div>

        <div class="row justify-content-center">
            <div class="col-lg-6 mt-5 mt-lg-0">

                @if (ViewBag.Mensaje != null)
                {
                    <div class="alert alert-secondary text-center">@ViewBag.Mensaje</div>
                }


                <div class="php-email-form">

                    <!-- Formulario -->
                    <form asp-action="Register" asp-controller="HR">

                        <div class="form-group">
                            <label for="Nombre">Nombre</label>
                            <input type="text" asp-for="Nombre" class="form-control" />
                            <span asp-validation-for="Nombre" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Apellidos">Apellidos</label>
                            <input type="text" asp-for="Apellidos" class="form-control" />
                            <span asp-validation-for="Apellidos" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Correo">Correo</label>
                            <input type="email" asp-for="Correo" class="form-control" />
                            <span asp-validation-for="Correo" class="text-danger"></span>
                        </div>

                        <div class="form-group">
                            <label for="Contrasenna">Contraseña</label>
                            <input type="password" asp-for="Contrasenna" class="form-control" />
                            <span asp-validation-for="Contrasenna" class="text-danger"></span>
                        </div>


                        <div class="text-center">
                            <button type="submit" class="btn btn-primary btn-block">Añadir</button>
                        </div>
                    </form>

                </div>

            </div>
        </div>
    </div>
</section>
