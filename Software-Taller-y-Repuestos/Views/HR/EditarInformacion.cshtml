@model Usuario

@{
    ViewData["Title"] = "Datos Personales";
}


<section id="login" class="contact section-bg d-flex align-items-center" style="min-height: 100vh;">
    <div class="container" data-aos="fade-up">

        <div class="section-title text-center">
            <h2>Agregar</h2>
            <p>Datos Personales</p>
        </div>

        <div class="row justify-content-center">

            <div class="col-lg-6 mt-5 mt-lg-0">

                @if (ViewBag.ErrorMessage != null)
                {
                    <div class="alert alert-secondary text-center">@ViewBag.ErrorMessage</div>
                }

                <form method="post" asp-controller="HR" asp-action="EditarInformacion" class="php-email-form">
                    <input type="hidden" name="usuarioId" value="@Model.UsuarioId" />


                    <div class="form-group">
                        <label asp-for="Telefono"></label>
                        <input asp-for="Telefono" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="Direccion"></label>
                        <input asp-for="Direccion" class="form-control" />
                    </div>

                    <div class="form-group">
                        <label asp-for="SalarioBase"></label>
                        <input asp-for="SalarioBase" class="form-control" />
                    </div>

                    <div class="text-center">
                        <button type="submit" class="btn btn-primary btn-block">Actualizar</button>
                    </div>
                </form>
            </div>
        </div>
    </div>
</section>