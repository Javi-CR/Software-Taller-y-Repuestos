﻿
<!DOCTYPE html>
<html lang="es">

<head>
    <meta charset="utf-8">
    <meta content="width=device-width, initial-scale=1.0" name="viewport">
    <title>@ViewData["Title"]</title>
    <meta content="" name="description">
    <meta content="" name="keywords">

    <!-- Favicons -->
    <link href="~/assets/img/favicon.png" rel="icon" asp-append-version="true">
    <link href="~/assets/img/apple-touch-icon.png" rel="apple-touch-icon" asp-append-version="true">
    <link rel="stylesheet" href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css">
    <link rel="stylesheet" href="https://stackpath.bootstrapcdn.com/bootstrap/4.5.2/css/bootstrap.min.css">


    <!-- Google Fonts -->
    <link href="https://fonts.googleapis.com/css?family=Open+Sans:300,300i,400,400i,600,600i,700,700i|Playfair+Display:ital,wght@0,400;0,500;0,600;0,700;1,400;1,500;1,600;1,700|Poppins:300,300i,400,400i,500,500i,600,600i,700,700i" rel="stylesheet">

    <!-- Vendor CSS Files -->
    <link href="~/assets/vendor/animate.css/animate.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/aos/aos.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/bootstrap/css/bootstrap.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/bootstrap-icons/bootstrap-icons.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/boxicons/css/boxicons.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/glightbox/css/glightbox.min.css" rel="stylesheet" asp-append-version="true">
    <link href="~/assets/vendor/swiper/swiper-bundle.min.css" rel="stylesheet" asp-append-version="true">

    <!-- Template Main CSS File -->
    <link href="~/assets/css/style.css" rel="stylesheet" asp-append-version="true">
</head>

<body>

    <!-- ======= Top Bar ======= -->
    <div id="topbar" class="d-flex align-items-center fixed-top">
        <div class="container d-flex justify-content-center justify-content-md-between">
            <div class="contact-info d-flex align-items-center">
                <i class="bi bi-phone d-flex align-items-center"><span>+506 8888 8888</span></i>
                <i class="bi bi-clock d-flex align-items-center ms-4"><span>Lun-Sab: 8AM - 5PM</span></i>
            </div>
        </div>
    </div>

    <!-- ======= Header ======= -->
    <header id="header" class="fixed-top d-flex align-items-cente">
        <div class="container-fluid container-xl d-flex align-items-center justify-content-lg-between">
            <h1 class="logo me-auto me-lg-0"><a href="@Url.Action("Index","Home")">Repuestos Salazar</a></h1>
            <nav id="navbar" class="navbar order-last order-lg-0">
                <ul>
                    <li><a class="nav-link scrollto active" href="#">Inicio</a></li>

                    



                    @if (User.IsInRole("Admin"))
                    {
                        <li><a class="nav-link scrollto" href="@Url.Action("Empleados", "HR")">Empleados</a></li>
                        <li><a class="nav-link" href="@Url.Action("Index", "Producto")">Productos</a></li>
                        <li><a class="nav-link" href="@Url.Action("Index", "Carrito")">Carrito</a></li>

                    }

                    @if (User.IsInRole("Cliente"))
                    {

                        <li><a class="nav-link" href="@Url.Action("Index", "Producto")">Productos</a></li>
                        <li><a class="nav-link" href="@Url.Action("Index", "Carrito")">Carrito</a></li>



                    }

                    @if (User.IsInRole("Empleado"))
                    {
                        <li><a class="nav-link" href="@Url.Action("Index", "Producto")">Productos</a></li>
                        <li><a class="nav-link" href="@Url.Action("Index", "Carrito")">Carrito</a></li>
                    }

                    @if (User.Identity.IsAuthenticated)
                    {

                        <li class="dropdown">
                            <a href="#"><span>@User.Identity.Name</span> <i class="bi bi-chevron-down"></i></a>
                            <ul>
                                <li><a href="@Url.Action("Perfil", "Usuario")">Mi Perfil</a></li>
                                <li><a href="@Url.Action("Logout", "Home")">Cerrar Sesión</a></li>
                            </ul>
                        </li>
                    }

                </ul>
                <i class="bi bi-list mobile-nav-toggle"></i>
            </nav><!-- .navbar -->
            @if (!User.Identity.IsAuthenticated)
            {
                <div class="d-flex align-items-cente">
                <a asp-area="" asp-controller="Home" asp-action="Login" class="book-a-table-btn scrollto d-none d-lg-flex">Iniciar Sesión</a>
                <a asp-area="" asp-controller="Home" asp-action="Register" class="book-a-table-btn scrollto d-none d-lg-flex">Registrarse</a>
                </div>
            }
        </div>


    </header>

    <!-- End Header -->

    <main role="main" class="pb-3">@RenderBody()</main>

    <!-- ======= Footer ======= -->
    <footer id="footer">
        <div class="footer-top">
            <div class="container">
                <div class="row">
                    <!-- Footer content here -->
                </div>
            </div>
        </div>
        <div class="container">
            <div class="copyright">
                &copy; Copyright <strong><span>Repuestos Salazar</span></strong>. All Rights Reserved
            </div>
            <div class="credits">
                Designed by <a href="https://bootstrapmade.com/">BootstrapMade</a>
            </div>
        </div>
    </footer><!-- End Footer -->

    <div id="preloader"></div>
    <a href="#" class="back-to-top d-flex align-items-center justify-content-center"><i class="bi bi-arrow-up-short"></i></a>

    <!-- Chat Icon (Left) -->
    <div class="chat-icon-container">
        <a href="javascript:void(0);" onclick="toggleChat()">
            <i class="bi bi-chat"></i>
        </a>
    </div>

    <!-- Ventana de chat -->
    <div id="chatBox">
        <div id="chatHeader" onclick="toggleChat()">Chat con Soporte</div>
        <div id="chatMessages"></div>
        <div id="chatInput">
            <input type="text" id="messageInput" placeholder="Escribe un mensaje...">
            <button id="sendMessageButton">Enviar</button>
        </div>
    </div>
    <!-- Vendor JS Files -->
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script> <!-- Agregado jQuery -->
    <script src="~/assets/vendor/aos/aos.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/bootstrap/js/bootstrap.bundle.min.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/glightbox/js/glightbox.min.js" asp-append-version="true"></script>
    <script src="~/assets/vendor/isotope-layout/isotope.pkgd.min.js" asp-append-version="true"></script>
    <!--<script src="~/assets/vendor/php-email-form/validate.js" asp-append-version="true"></script>-->
    <script src="~/assets/vendor/swiper/swiper-bundle.min.js" asp-append-version="true"></script>

    @RenderSection("Scripts", required: false)

    <!-- Template Main JS File -->
    <script src="~/assets/js/main.js" asp-append-version="true"></script>

    <script src="~/lib/jquery/jquery.min.js"></script>
    <script src="~/lib/jquery-validation/dist/jquery.validate.min.js"></script>
    <script src="~/lib/jquery-validation-unobtrusive/jquery.validate.unobtrusive.min.js"></script>

    <!-- Chatbox JS -->
    <script>
        function toggleChat() {
            var chatBox = document.getElementById("chatBox");

            // Verifica si el chat está visible
            if (chatBox.style.display === "none" || chatBox.style.display === "") {
                chatBox.style.display = "block";
                setTimeout(function () {
                    chatBox.style.opacity = 1;
                    chatBox.style.bottom = "90px";
                }, 10);
            } else {
                chatBox.style.opacity = 0;
                chatBox.style.bottom = "-500px";
                setTimeout(function () {
                    chatBox.style.display = "none";
                }, 300);
            }
        }

        // Enviar mensaje
        document.getElementById("sendMessageButton").addEventListener("click", function () {
            var messageInput = document.getElementById("messageInput");
            var chatMessages = document.getElementById("chatMessages");

            if (messageInput.value.trim() !== "") {
                var newMessage = document.createElement("div");
                newMessage.textContent = messageInput.value;
                chatMessages.appendChild(newMessage);
                messageInput.value = ""; // Limpiar campo
            }
        });
    </script>
</body>

</html>