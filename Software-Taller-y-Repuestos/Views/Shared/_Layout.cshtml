    <!-- Chatbox JS -->
    <script>
        // URL generada usando  Url Action desde Razor
        var buscarProductoUrl = '@Url.Action("BuscarProducto", "Home")';

        // Función para mostrar y ocultar el chat
        function toggleChat() {
            var chatBox = document.getElementById("chatBox");

            if (chatBox.style.display === "none" || chatBox.style.display === "") {
                chatBox.style.display = "block";
                setTimeout(function () {
                    chatBox.style.opacity = 1;
                    chatBox.style.bottom = "90px";
                }, 10);
            } else {
                chatBox.style.opacity = 0;
                chatBox.style.bottom = "-500px";
                setTimeout(function () {
                    chatBox.style.display = "none";
                }, 300);
            }
        }

        // Enviar mensaje
        document.getElementById("sendMessageButton").addEventListener("click", function () {
            var messageInput = document.getElementById("messageInput");
            var chatMessages = document.getElementById("chatMessages");

            if (messageInput.value.trim() !== "") {
                var message = messageInput.value.trim();
                var newMessage = document.createElement("div");
                newMessage.textContent = "Cliente: " + message;
                chatMessages.appendChild(newMessage);

                // Llamada AJAX al backend para buscar el producto usando la URL generada
                $.ajax({
                    url: buscarProductoUrl,  // Usamos la URL generada por Razor
                    type: "POST",
                    dataType: "json",
                    data: { nombreProducto: message },
                    success: function (data) {
                        var responseMessage = document.createElement("div");

                        if (data.success) {
                            // Si el producto existe y tiene suficiente stock
                            responseMessage.innerHTML = `
                                    <strong>Producto encontrado:</strong><br>
                                    <strong>Nombre:</strong> ${data.data.Nombre}<br>
                                    <strong>Cantidad disponible:</strong> ${data.data.Cantidad}<br>
                                    <strong>Descripción:</strong> ${data.data.Descripcion}<br>
                                    <strong>Código:</strong> ${data.data.Codigo}<br>
                                    <strong>Categoría:</strong> ${data.data.Categoria}<br>
                                    <strong>Precio:</strong> ${data.data.PrecioVenta}<br>
                                `;
                        } else {
                            // Si no se encuentra el producto o no tiene suficiente stock
                            responseMessage.textContent = "Lo siento, no hemos encontrado ese producto o la cantidad es insuficiente.";
                        }

                        chatMessages.appendChild(responseMessage);
                        chatMessages.scrollTop = chatMessages.scrollHeight; // Desplazar hacia abajo
                    },
                    error: function (error) {
                        console.error("Error:", error);
                        var errorMessage = document.createElement("div");
                        errorMessage.textContent = "Hubo un problema al procesar la solicitud. Inténtalo de nuevo.";
                        chatMessages.appendChild(errorMessage);
                    }
                });

                // Limpiar el campo de entrada
                messageInput.value = "";
            }
        });
    </script>
</body>

