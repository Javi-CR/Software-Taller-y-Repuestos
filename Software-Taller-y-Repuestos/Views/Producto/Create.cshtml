@model Software_Taller_y_Repuestos.Models.Producto

@{
    ViewData["Title"] = "Crear Producto";
}

<div class="container my-5" data-aos="fade-up">
    <div class="section-title mb-4">
        <h2 class="text-center">Agregar Producto</h2>
    </div>

    <form asp-action="Create" enctype="multipart/form-data">
        <!-- Nombre -->
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Nombre" placeholder="Nombre del producto" />
            <label asp-for="Nombre">Nombre del Producto</label>
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>

        <!-- Código -->
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Codigo" placeholder="Código del producto" id="Codigo" />
            <label asp-for="Codigo">Código</label>
            <span id="codigo-error" class="text-danger"></span>
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <!-- Categoría -->
        <div class="form-floating mb-3">
            <select class="form-select" asp-for="CategoriaId" asp-items="ViewBag.CategoriaId">
                <option selected>Seleccione una categoría</option>
            </select>
            <label asp-for="CategoriaId">Categoría</label>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>

        <!-- Descripción -->
        <div class="form-floating mb-3">
            <textarea class="form-control" asp-for="Descripcion" placeholder="Descripción del producto"></textarea>
            <label asp-for="Descripcion">Descripción</label>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>

        <!-- Cantidad -->
        <div class="form-floating mb-3">
            <input type="number" class="form-control" asp-for="Cantidad" placeholder="Cantidad disponible" />
            <label asp-for="Cantidad">Cantidad</label>
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>

        <!-- Precio de Compra -->
        <div class="form-floating mb-3">
            <input type="number" step="0.01" class="form-control" asp-for="PrecioCompra" placeholder="Precio de compra" />
            <label asp-for="PrecioCompra">Precio de Compra</label>
            <span asp-validation-for="PrecioCompra" class="text-danger"></span>
        </div>

        <!-- Precio de Venta -->
        <div class="form-floating mb-3">
            <input type="number" step="0.01" class="form-control" asp-for="PrecioVenta" placeholder="Precio de venta" />
            <label asp-for="PrecioVenta">Precio de Venta</label>
            <span asp-validation-for="PrecioVenta" class="text-danger"></span>
        </div>

        <!-- Marca -->
        <div class="form-floating mb-3">
            <input type="text" class="form-control" asp-for="Marca" placeholder="Marca del producto" />
            <label asp-for="Marca">Marca</label>
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>

        <!-- Imagen -->
        <div class="form-group">
            <label for="Imagen">Imagen</label>
            <input type="file" class="form-control" asp-for="Imagen" />
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>

        <!-- Botones -->
        <div class="mt-4 text-center">
            <button type="submit" class="btn btn-success">Guardar</button>
            <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
        </div>
    </form>
</div>

@section Scripts {
    <partial name="_ValidationScriptsPartial" />
}
