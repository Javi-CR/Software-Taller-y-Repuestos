@model Software_Taller_y_Repuestos.Models.Producto
@{
    ViewData["Title"] = "Crear Producto";
}
<div class="container my-5" data-aos="fade-up">
    <div class="section-title">
        <h2 class="text-center">Agregar Producto</h2>
    </div>
    <form asp-action="Create" enctype="multipart/form-data">
        <div class="form-group">
            <label for="Nombre">Nombre</label>
            <input type="text" class="form-control" asp-for="Nombre" />
            <span asp-validation-for="Nombre" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label asp-for="Codigo" class="control-label"></label>
            <input asp-for="Codigo" class="form-control" id="Codigo" />
            <span id="codigo-error" class="text-danger"></span> <!-- Contenedor para el mensaje de error -->
            <span asp-validation-for="Codigo" class="text-danger"></span>
        </div>

        <div class="form-group">
            <label asp-for="CategoriaId" class="control-label"></label>
            <select asp-for="CategoriaId" class="form-control" asp-items="ViewBag.CategoriaId"></select>
            <span asp-validation-for="CategoriaId" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Descripcion">Descripción</label>
            <textarea class="form-control" asp-for="Descripcion"></textarea>
            <span asp-validation-for="Descripcion" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Cantidad">Cantidad</label>
            <input type="number" class="form-control" asp-for="Cantidad" />
            <span asp-validation-for="Cantidad" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="PrecioCompra">Precio de Compra</label>
            <input type="number" class="form-control" asp-for="PrecioCompra" />
            <span asp-validation-for="PrecioCompra" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="PrecioVenta">Precio de Venta</label>
            <input type="number" class="form-control" asp-for="PrecioVenta" />
            <span asp-validation-for="PrecioVenta" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Marca">Marca</label>
            <input type="text" class="form-control" asp-for="Marca" />
            <span asp-validation-for="Marca" class="text-danger"></span>
        </div>
        <div class="form-group">
            <label for="Imagen">Imagen</label>
            <input type="file" class="form-control" asp-for="Imagen" />
            <span asp-validation-for="Imagen" class="text-danger"></span>
        </div>

        <button type="submit" class="btn btn-success">Guardar</button>
        <a asp-action="Index" class="btn btn-secondary">Cancelar</a>
    </form>
</div>

@section Scripts {
    <script src="https://code.jquery.com/jquery-3.6.0.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation@1.19.3/dist/jquery.validate.min.js"></script>
    <script src="https://cdn.jsdelivr.net/npm/jquery-validation-unobtrusive@3.2.12/dist/jquery.validate.unobtrusive.min.js"></script>
    <partial name="_ValidationScriptsPartial" />
}
<script src="https://ajax.googleapis.com/ajax/libs/jquery/3.5.1/jquery.min.js"></script>

<script>
    $(document).ready(function () {
        $('#Codigo').on('input', function () {
            var codigo = $(this).val();

            if (codigo.length > 0) { // Solo verifica si el campo no está vacío
                $.get('/Producto/VerificarCodigoUnico', { codigo: codigo })
                    .done(function (isUnique) {
                        if (!isUnique) {
                            $('#codigo-error').text('El código ya está en uso. Ingrese uno diferente.');
                        } else {
                            $('#codigo-error').text(''); // Limpia el mensaje si el código es único
                        }
                    });
            } else {
                $('#codigo-error').text(''); // Limpia el mensaje si el campo está vacío
            }
        });
    });
</script>
