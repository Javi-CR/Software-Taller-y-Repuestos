@model IEnumerable<Software_Taller_y_Repuestos.Models.Producto>

@{
    ViewData["Title"] = "Lista de Productos";
}

<div class="container my-5">
    <!-- Sección de Productos -->
    <section id="productos" class="productos-section">
        <div class="container" data-aos="fade-up">

            <!-- Título -->
            <div class="section-title">
                <h2 class="text-center">Lista de Productos</h2>
            </div>

            <!-- Botón para crear un nuevo producto -->
            <div class="mb-4 text-right">
                <a asp-action="Create" class="btn btn-success btn-lg">
                    <i class="bi bi-plus-circle"></i> Crear Nuevo Producto
                </a>

            </div>

            <!-- Sección para subir productos desde archivo -->
            <section id="subir-productos" class="my-4">
                <form asp-action="Upload" method="post" enctype="multipart/form-data">
                    <div class="form-group">
                        <label for="file">Seleccionar archivo (CSV o Excel):</label>
                        <input type="file" class="form-control" id="file" name="file" required />
                    </div>
                    <button type="submit" class="btn btn-primary mt-2">Subir</button>
                </form>

                <!-- Muestra errores de validación -->
                @if (!ViewData.ModelState.IsValid)
                {
                    <div class="alert alert-danger mt-2">
                        @foreach (var error in ViewData.ModelState.Values.SelectMany(v => v.Errors))
                        {
                            <p>@error.ErrorMessage</p>
                        }
                    </div>
                }
            </section>
            <!-- Botón para subir productos desde un archivo -->
            <a asp-controller="Producto" asp-action="Upload" class="btn btn-primary">Subir Productos</a>



            <!-- Barra de búsqueda y ordenación -->
            <form asp-action="Index" method="get" class="form-inline mb-4 d-flex justify-content-between align-items-center">
                <div class="input-group w-50">
                    <input type="text" name="searchString" value="@ViewData["CurrentFilter"]" class="form-control" placeholder="Buscar por nombre...">
                    <div class="input-group-append">
                        <button class="btn btn-primary" type="submit">
                            <i class="fas fa-search"></i> Buscar
                        </button>
                    </div>
                </div>
                <div class="ml-3">
                    <span class="font-weight-bold">Ordenar por:</span>
                    <a asp-route-sortOrder="@ViewData["NameSortParam"]" class="btn btn-link">Nombre</a> |
                    <a asp-route-sortOrder="@ViewData["PriceSortParam"]" class="btn btn-link">Precio</a>
                </div>
            </form>


            <!-- Tabla de productos -->
            <div class="table-responsive">
                <table class="table table-hover table-bordered">
                    <thead class="bg-dark text-white">
                        <tr>
                            <th>Nombre</th>
                            <th>Código</th>
                            <th>Categoría</th>
                            <th>Cantidad</th>
                            <th>Precio Venta</th>
                            <th>Acciones</th>
                        </tr>
                    </thead>
                    <tbody>
                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>@item.Nombre</td>
                                <td>@item.Codigo</td>
                                <td>@item.Categoria?.Nombre</td>
                                <td>@item.Cantidad</td>
                                <td>@item.PrecioVenta.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CR"))</td>
                                <td class="text-center">
                                    <a asp-action="Edit" asp-route-id="@item.ProductoId" class="btn btn-sm btn-warning mx-1">
                                        <i class="bi bi-pencil-square"></i> Editar
                                    </a>
                                    <a asp-action="Details" asp-route-id="@item.ProductoId" class="btn btn-sm btn-info mx-1">
                                        <i class="bi bi-info-circle"></i> Detalles
                                    </a>
                                    <a asp-action="Delete" asp-route-id="@item.ProductoId" class="btn btn-sm btn-danger mx-1">
                                        <i class="bi bi-trash"></i> Eliminar
                                    </a>
                                </td>
                            </tr>
                        }
                    </tbody>
                </table>
            </div>
        </div>
    </section>
</div>

@section Scripts {
    <script src="~/assets/vendor/aos/aos.js" asp-append-version="true"></script>
    <script>
        AOS.init();
    </script>

}
