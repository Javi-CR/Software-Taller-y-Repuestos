@model List<Software_Taller_y_Repuestos.Models.CarritoViewModel>

@{
    ViewData["Title"] = "Carrito de Compras";
    var message = TempData["Message"] as string;

    decimal subtotal = Model.Sum(item => item.Subtotal);
    decimal iva = subtotal * 0.13m; // IVA del 13%
    decimal total = subtotal + iva;
}

<section id="profile-section" class="py-5">
    <div class="container">


        <div class="container mt-5 pt-4">
            <div class="row">
                <div class="col-lg-8 mx-auto">
                    <div class="card shadow-sm border-0 rounded-3 mb-4">
                        <div class="card-header bg-primary text-white">
                            <h2 class="h4 mb-0 text-center py-2"><i class="fas fa-shopping-cart me-2"></i>Carrito de Compras</h2>
                        </div>

                        @if (!string.IsNullOrEmpty(message))
                        {
                            <div class="alert alert-success alert-dismissible fade show m-3" role="alert">
                                <i class="fas fa-check-circle me-2"></i> @message
                                <button type="button" class="btn-close" data-bs-dismiss="alert" aria-label="Close"></button>
                            </div>
                        }

                        <div class="card-body p-0">
                            @if (Model.Count == 0)
                            {
                                <div class="text-center py-5">
                                    <i class="fas fa-shopping-basket fa-4x text-muted mb-3"></i>
                                    <h3 class="text-muted">Su carrito está vacío</h3>
                                    <p class="mb-4">Añada productos para comenzar su compra.</p>
                                    <a href="@Url.Action("Index", "Producto")" class="btn btn-primary">
                                        <i class="fas fa-store me-2"></i>Ir a Productos
                                    </a>
                                </div>
                            }
                            else
                            {
                                <div class="table-responsive">
                                    <table class="table table-hover mb-0">
                                        <thead class="table-light">
                                            <tr>
                                                <th class="ps-4">Producto</th>
                                                <th class="text-center">Cantidad</th>
                                                <th class="text-end">Precio Unitario</th>
                                                <th class="text-end">Subtotal</th>
                                                <th class="text-center">Acciones</th>
                                            </tr>
                                        </thead>
                                        <tbody>
                                            @foreach (var item in Model)
                                            {
                                                <tr>
                                                    <td class="ps-4 align-middle">
                                                        <div class="d-flex align-items-center">

                                                            <span class="fw-medium">@item.Producto.Nombre</span>
                                                        </div>
                                                    </td>
                                                    <td class="text-center align-middle">
                                                        <form method="post" action="@Url.Action("ModificarCantidad")" class="d-flex justify-content-center quantity-form">
                                                            <div class="input-group" style="width: 120px;">
                                                                <button type="button" class="btn btn-outline-secondary quantity-btn" onclick="decreaseQuantity(this)">
                                                                    <i class="fas fa-minus"></i>
                                                                </button>
                                                                <input type="number" name="cantidad" value="@item.Cantidad" min="1" class="form-control text-center quantity-input">
                                                                <button type="button" class="btn btn-outline-secondary quantity-btn" onclick="increaseQuantity(this)">
                                                                    <i class="fas fa-plus"></i>
                                                                </button>
                                                                <input type="hidden" name="productoId" value="@item.Producto.ProductoId">
                                                            </div>
                                                            <button type="submit" class="btn btn-sm btn-warning ms-2 update-btn">
                                                                <i class="fas fa-sync-alt"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                    <td class="text-end align-middle">@item.Producto.PrecioVenta.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CR"))</td>
                                                    <td class="text-end align-middle fw-bold">@item.Subtotal.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CR"))</td>
                                                    <td class="text-center align-middle">
                                                        <form method="post" asp-action="EliminarDelCarrito" class="d-inline">
                                                            <input type="hidden" name="productoId" value="@item.Producto.ProductoId">
                                                            <button type="submit" class="btn btn-outline-danger btn-sm">
                                                                <i class="fas fa-trash-alt"></i>
                                                            </button>
                                                        </form>
                                                    </td>
                                                </tr>
                                            }
                                        </tbody>
                                    </table>
                                </div>
                            }
                        </div>
                    </div>

                    @if (Model.Count > 0)
                    {
                        <div class="row">
                            <div class="col-md-6 mb-3">
                                <div class="d-flex flex-column flex-sm-row gap-2">
                                    <form method="post" asp-action="VaciarCarrito" class="d-inline">
                                        <button type="submit" class="btn btn-outline-danger">
                                            <i class="fas fa-trash me-1"></i> Vaciar Carrito
                                        </button>
                                    </form>
                                    <a href="@Url.Action("Index", "Producto")" class="btn btn-outline-primary">
                                        <i class="fas fa-arrow-left me-1"></i> Seguir Comprando
                                    </a>
                                </div>
                            </div>

                            <div class="col-md-6">
                                <div class="card shadow-sm border-0 rounded-3">
                                    <div class="card-body">
                                        <h5 class="card-title mb-3">Resumen del pedido</h5>
                                        <div class="d-flex justify-content-between mb-2">
                                            <span>Subtotal:</span>
                                            <span>@subtotal.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CR"))</span>
                                        </div>
                                        <div class="d-flex justify-content-between mb-3">
                                            <span>IVA (13%):</span>
                                            <span>@iva.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CR"))</span>
                                        </div>
                                        <hr>
                                        <div class="d-flex justify-content-between mb-3">
                                            <span class="fw-bold">Total:</span>
                                            <span class="fw-bold fs-5 text-primary">@total.ToString("C", System.Globalization.CultureInfo.CreateSpecificCulture("es-CR"))</span>
                                        </div>
                                        <button type="button" class="btn btn-primary w-100" data-bs-toggle="modal" data-bs-target="#modalPago">
                                            <i class="fas fa-credit-card me-1"></i> Proceder a Pagar
                                        </button>
                                    </div>
                                </div>
                            </div>
                        </div>
                    }
                </div>
            </div>
        </div>

        <!-- Modal para seleccionar tipo de pago -->
        <div class="modal fade" id="modalPago" tabindex="-1" aria-labelledby="modalPagoLabel" aria-hidden="true">
            <div class="modal-dialog modal-dialog-centered">
                <div class="modal-content">
                    <div class="modal-header bg-primary text-white">
                        <h5 class="modal-title" id="modalPagoLabel"><i class="fas fa-money-bill-wave me-2"></i>Seleccionar Método de Pago</h5>
                        <button type="button" class="btn-close btn-close-white" data-bs-dismiss="modal" aria-label="Cerrar"></button>
                    </div>
                    <div class="modal-body">
                        <div class="payment-options mb-4">
                            <div class="btn-group w-100" role="group" aria-label="Payment options">
                                <button type="button" class="btn btn-outline-primary payment-option active" id="btnPagoPresencialModal">
                                    <i class="fas fa-store me-2"></i>Pago Presencial
                                </button>
                                <button type="button" class="btn btn-outline-primary payment-option" id="btnPagoSinpe">
                                    <i class="fas fa-mobile-alt me-2"></i>Pago con SINPE
                                </button>
                            </div>
                        </div>

                        <div id="contenidoPagoPresencial" class="payment-content active">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-map-marker-alt fa-3x text-primary mb-3"></i>
                                    <h5>Dirección de nuestra tienda:</h5>
                                    <p class="mb-4">Del cementerio de Desamparados 200 sur, 300 oeste y 100 sur, San José, Desamparados, 10301</p>
                                    <div class="qr-container mx-auto mb-3" style="max-width: 200px;">
                                        <img src="~/assets/img/QR.png" class="img-fluid border p-2 bg-white rounded" alt="QR code" />
                                    </div>
                                    <form method="post" action="@Url.Action("PagoPresencial", "Carrito")">
                                        <button type="submit" class="btn btn-primary">
                                            <i class="fas fa-receipt me-2"></i>Guardar Factura
                                        </button>
                                    </form>
                                </div>
                            </div>
                        </div>

                        <div id="contenidoPagoSinpe" class="payment-content">
                            <div class="card border-0 bg-light">
                                <div class="card-body text-center">
                                    <i class="fas fa-phone fa-3x text-primary mb-3"></i>
                                    <h5>Realice el pago mediante SINPE Móvil:</h5>
                                    <p class="number-display fs-4 fw-bold mb-4">+506 8840-7277</p>
                                    <form asp-action="PagoSinpe" asp-controller="Carrito" enctype="multipart/form-data" method="post">
                                        <div class="mb-3">
                                            <label for="recibo" class="form-label">Adjunte comprobante de pago:</label>
                                            <div class="file-upload-wrapper">
                                                <div class="file-upload-message p-3 text-center border rounded bg-white mb-2" id="fileMessage">
                                                    <i class="fas fa-cloud-upload-alt text-primary fa-2x mb-2"></i>
                                                    <p class="mb-0">Arrastre su comprobante aquí o haga click para seleccionar</p>
                                                </div>
                                                <input type="file" id="recibo" name="recibo" accept=".png,.jpg,.jpeg" class="form-control file-upload-input" />
                                            </div>
                                        </div>
                                        <div class="d-grid gap-2">
                                            <button type="submit" class="btn btn-primary">
                                                <i class="fas fa-paper-plane me-2"></i>Enviar Comprobante
                                            </button>
                                        </div>
                                    </form>
                                </div>
                            </div>
                        </div>
                    </div>
                </div>
            </div>
        </div>


    </div>
</section>



<link href="https://cdnjs.cloudflare.com/ajax/libs/font-awesome/5.15.4/css/all.min.css" rel="stylesheet">

<style>

    .bg-primary {
        background-color: #cda45e !important;
    }

    .btn-primary {
        color: #fff;
        background-color: #000;
        border-color: #cda45e;
        text-decoration: none; /* Evitar subrayado */
    }

        .btn-primary:active,
        .btn-primary:focus {
            background-color: #cda45e; /* Color de fondo cuando se selecciona */
            border-color: #fff; /* Color del borde cuando se selecciona */
            outline: none; /* Eliminar el contorno por defecto de los navegadores al estar en foco */
        }

    .card-body {
        background-color: #040404 !important;
    }

    .modal-body {
        background-color: #040404 !important;
    }
    
    /* Estilos para la tabla de carrito */
    .table th {
        font-weight: 600;
        color: #495057;
    }

    .quantity-form {
        white-space: nowrap;
    }

    .quantity-input {
        font-weight: 500;
    }

    .quantity-btn {
        padding: 0.375rem 0.5rem;
    }

    .update-btn {
        padding: 0.375rem 0.5rem;
    }

    /* Estilos para las opciones de pago */
    .payment-options {
        margin-bottom: 1.5rem;
    }

    .payment-content {
        display: none;
    }

        .payment-content.active {
            display: block;
        }

    .payment-option.active {
        background-color: #cda45e;
        color: white;
    }

    .number-display {
        padding: 0.75rem;
        background-color: #000;
        border-radius: 0.25rem;
        border: 1px dashed #cda45e;
    }

    /* Estilos para carga de archivos */
    .file-upload-wrapper {
        position: relative;
    }

    .file-upload-input {
        cursor: pointer;
    }

    .file-upload-message {
        color: #6c757d;
        transition: all 0.2s ease;
    }

    .file-upload-input:focus + .file-upload-message {
        border-color: #cda45e;
    }
</style>

<script>
    // Funciones para incrementar y decrementar cantidades
    function increaseQuantity(button) {
        const input = button.parentElement.querySelector('.quantity-input');
        input.value = parseInt(input.value) + 1;
    }

    function decreaseQuantity(button) {
        const input = button.parentElement.querySelector('.quantity-input');
        if (parseInt(input.value) > 1) {
            input.value = parseInt(input.value) - 1;
        }
    }

    // Cambio de métodos de pago
    document.addEventListener('DOMContentLoaded', function() {
        const paymentOptions = document.querySelectorAll('.payment-option');
        const paymentContents = document.querySelectorAll('.payment-content');

        paymentOptions.forEach(option => {
            option.addEventListener('click', function() {
                // Elimina la clase active de todas las opciones
                paymentOptions.forEach(opt => opt.classList.remove('active'));
                // Añade la clase active a la opción seleccionada
                option.classList.add('active');

                // Oculta todos los contenidos
                paymentContents.forEach(content => content.classList.remove('active'));

                // Muestra el contenido correspondiente
                if (option.id === 'btnPagoPresencialModal') {
                    document.getElementById('contenidoPagoPresencial').classList.add('active');
                } else if (option.id === 'btnPagoSinpe') {
                    document.getElementById('contenidoPagoSinpe').classList.add('active');
                }
            });
        });

        // Actualizar el mensaje del input file al seleccionar un archivo
        const fileInput = document.getElementById('recibo');
        const fileMessage = document.getElementById('fileMessage');

        if(fileInput && fileMessage) {
            fileInput.addEventListener('change', function() {
                if (fileInput.files.length > 0) {
                    const fileName = fileInput.files[0].name;
                    fileMessage.innerHTML = `<i class="fas fa-file-image text-success fa-2x mb-2"></i><p class="mb-0">${fileName}</p>`;
                } else {
                    fileMessage.innerHTML = `<i class="fas fa-cloud-upload-alt text-primary fa-2x mb-2"></i><p class="mb-0">Arrastre su comprobante aquí o haga click para seleccionar</p>`;
                }
            });
        }
    });
</script>