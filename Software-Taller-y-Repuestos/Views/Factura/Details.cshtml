@model Software_Taller_y_Repuestos.Models.Factura

<h2>Detalles de Factura</h2>
<p>ID: @Model.FacturaId</p>
<p>Fecha: @Model.Fecha</p>
<p>Total: @Model.Total</p>
<p>Impuestos: @Model.Impuestos</p>
<p>Descuento: @Model.Descuento</p>

<h3>Detalles de Productos</h3>
<table>
    <tr>
        <th>Producto</th>
        <th>Cantidad</th>
        <th>Precio</th>
    </tr>
    @foreach (var detalle in Model.DetallesFacturas)
    {
        <tr>
            <td>@detalle.ProductoId</td>
            <td>@detalle.Cantidad</td>
            <td>@detalle.Precio</td>
        </tr>
    }
</table>
