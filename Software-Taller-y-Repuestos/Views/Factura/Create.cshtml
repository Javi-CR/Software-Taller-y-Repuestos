@model Software_Taller_y_Repuestos.Models.Factura

<h2>Crear Factura</h2>

<form asp-action="Create" method="post">
    <div class="form-group">
        <label asp-for="UsuarioId"></label>
        <input asp-for="UsuarioId" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Fecha"></label>
        <input asp-for="Fecha" class="form-control" type="date" />
    </div>

    <div class="form-group">
        <label asp-for="Total"></label>
        <input asp-for="Total" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Impuestos"></label>
        <input asp-for="Impuestos" class="form-control" />
    </div>

    <div class="form-group">
        <label asp-for="Descuento"></label>
        <input asp-for="Descuento" class="form-control" />
    </div>

    <button type="submit" class="btn btn-primary">Guardar Factura</button>
</form>
