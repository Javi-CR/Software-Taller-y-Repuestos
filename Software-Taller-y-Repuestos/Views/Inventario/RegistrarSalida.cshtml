@model Software_Taller_y_Repuestos.Models.Producto

@{
    ViewData["Title"] = "Registrar Salida";
}

<div class="container mt-5 pt-5">
    <div class="section-title mb-4">
        <h2 class="text-center">Registrar Salida de Inventario</h2>
    </div>

    <form asp-action="RegistrarSalida" method="post">
        <div class="form-group">
            <label>Producto</label>
            <select asp-for="ProductoId" class="form-control" asp-items="ViewBag.ProductoId"></select>
        </div>
        <div class="form-group">
            <label>Cantidad</label>
            <input type="number" class="form-control" name="cantidad" required />
        </div>
        <button type="submit" class="btn btn-primary">Registrar</button>
    </form>
</div>